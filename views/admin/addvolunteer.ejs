<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Volunteer</title>
  <link rel="stylesheet" href="/public/styles.css">
</head>
<body>
  <div class="container">
    <h2>Add Volunteer</h2>
    <!-- Display a form to edit the volunteer's information -->
    <form action="/addvolunteer" method="POST">
        <div class="form-group">
        <label for="vol_first_name">First Name</label>
        <input type="text" id="vol_first_name" name="vol_first_name" required>
      </div>
      <div class="form-group">
        <label for="vol_last_name">Last Name</label>
        <input type="text" id="vol_last_name" name="vol_last_name" required>
      </div>
      <div class="form-group">
        <label for="vol_email">Email</label>
        <input type="email" id="vol_email" name="vol_email" required>
      </div>
      <div class="form-group">
        <label for="vol_phone">Phone</label>
        <input type="text" id="vol_phone" name="vol_phone" required>
      </div>
      <div class="form-group">
        <label for="vol_street_address">Street Address</label>
        <input type="text" id="vol_street_address" name="vol_street_address" required>
      </div>
      <div class="form-group">
        <label for="vol_city">City</label>
        <input type="text" id="vol_city" name="vol_city" required>
      </div>
      <div class="form-group">
        <label for="vol_state">State</label>
        <input type="text" id="vol_state" name="vol_state" required>
      </div>
      <div class="form-group">
        <label for="vol_zip">Zip Code</label>
        <input type="text" id="vol_zip" name="vol_zip" required>
      </div>
      <div class="form-group">
        <label for="source">Source</label>
        <select id="source" name="source" required>
          <% sources.forEach(function(source) { %>
            <option value="<%= source %>"><%= source %></option>
          <% }); %>
        </select>
      </div>
      <div class="form-group">
        <label for="sewing_level">Sewing Level</label>
        <div>
          <input type="radio" id="beginner" name="sewing_level" value="B"> 
          <label for="beginner">Beginner</label>
        </div>
        <div>
          <input type="radio" id="intermediate" name="sewing_level" value="I"> 
          <label for="intermediate">Intermediate</label>
        </div>
        <div>
          <input type="radio" id="advanced" name="sewing_level" value="A"> 
          <label for="advanced">Advanced</label>
        </div>
      </div>      
      <div class="form-group">
        <label for="num_hours">Number of Hours</label>
        <input type="number" id="num_hours" name="num_hours" required>
      </div>
      
      <button type="submit" class="button">Add</button>
    </form>
    <a href="/adminvolunteer" class="button">Back to Volunteers List</a>
  </div>
</body>
</html>
