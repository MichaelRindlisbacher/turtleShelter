<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User</title>
</head>
<body>
  <h1>Edit User</h1>

  <form action="/superuser/edituser/<%= user.user_id %>" method="POST">
    <!-- First Name Field -->
    <div>
      <label for="user_first_name">First Name:</label>
      <input type="text" name="user_first_name" value="<%= user.user_first_name %>" oninput="this.value = this.value.toUpperCase()">
    </div>

    <!-- Last Name Field -->
    <div>
      <label for="user_last_name">Last Name:</label>
      <input type="text" name="user_last_name" value="<%= user.user_last_name %>" oninput="this.value = this.value.toUpperCase()">
    </div>

    <!-- Username Field -->
    <div>
      <label for="username">Username:</label>
      <input type="text" name="username" value="<%= user.username %>">
    </div>

    <!-- Password Field -->
    <div>
      <label for="password">Password:</label>
      <input type="password" name="password" value="<%= user.password %>">
    </div>

    <button type="submit">Update User</button>
  </form>
</body>
</html>